    <groupId>com.travel</groupId>
    <artifactId>web</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>web</name>
    <description>秒杀控制层</description>

    <properties>
        <java.version>1.8</java.version>
        <jackson.version>2.9.6</jackson.version>
